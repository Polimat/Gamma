<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gamma.Views"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:dialogs="clr-namespace:Gamma.Dialogs"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:g="clr-namespace:Gamma"
             xmlns:viewModels="clr-namespace:Gamma.ViewModels"
             x:Class="Gamma.Views.ProductionTaskSGIView"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="850"
             d:DataContext="{d:DesignInstance Type=viewModels:ProductionTaskSGIViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <dx:DXTabControl>
            <dx:DXTabItem Header="Основная" >
                <dxlc:LayoutControl Orientation="Vertical">
                    <dxlc:LayoutGroup Header="LayoutGroup" View="Group" Orientation="Horizontal">
                        <dxlc:LayoutItem Label="Дата начала" LabelPosition="Top" Width="130">
                            <dxe:DateEdit EditValue="{Binding DateBegin, ValidatesOnDataErrors=True}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Номенклатура" LabelPosition="Top">
                            <dxe:ButtonEdit EditValue="{Binding NomenclatureName, ValidatesOnDataErrors=True}" AllowDefaultButton="False" IsReadOnly="True">
                                <dxe:ButtonInfo Content="..." Command="{Binding ChooseNomenclatureCommand}"/>
                            </dxe:ButtonEdit>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Необходимое кол-во" LabelPosition="Top" Width="130">
                            <dxe:SpinEdit EditValue="{Binding Quantity, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" EditValueType="{x:Type sys:Int32}" MinValue="0" />
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem Label="Дата окончания" LabelPosition="Top" Width="130">
                            <dxe:DateEdit EditValue="{Binding DateEnd, ValidatesOnDataErrors=True}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Параметры" LabelPosition="Top">
                            <dxe:ComboBoxEdit EditValue="{Binding CharacteristicID, ValidatesOnDataErrors=True}" ItemsSource="{Binding Characteristics}"
						DisplayMember="CharacteristicName" ValueMember="CharacteristicID"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Сделано" LabelPosition="Top" Width="130">
                            <dxe:SpinEdit EditValue="{Binding MadeQuantity}" IsReadOnly="True" AllowDefaultButton="False" EditValueType="{x:Type sys:Int32}"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup>
                        <dxlc:LayoutItem Label="Передел" LabelPosition="Top" Width="100" HorizontalAlignment="Left">
                            <dxe:ComboBoxEdit EditValue="{Binding PlaceID, ValidatesOnDataErrors=True}" ItemsSource="{Binding Places}"
					DisplayMember="PlaceName" ValueMember="PlaceID" SelectedItem="{Binding SelectedPlace, Mode=OneWayToSource}"/>
                        </dxlc:LayoutItem>
                        <Button Content="Печать образца" Height="22" VerticalAlignment="Bottom" Width="120" Command="{Binding PrintExampleCommand}">
                            <Button.Style>
                                <Style>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsReadOnly}"  Value="True">
                                            <Setter Property="Button.Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!--<dxlc:LayoutItem Label="Номер задания робота" LabelPosition="Top" Visibility="{Binding RobotNomenclatureVisible}">
                    <dxe:ComboBoxEdit IsTextEditable="False" 
                                                      ItemsSource="{Binding RobotNomenclatures}" EditValue="{Binding RobotProductNumber, UpdateSourceTrigger=PropertyChanged}"
                                                      DisplayMember="ProdName" ValueMember="ProdNumber"  AllowNullInput="True">
                    </dxe:ComboBoxEdit>
                </dxlc:LayoutItem>-->
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutItem Label="Использованные тамбура" LabelPosition="Top">
                        <local:SpoolWithdrawByShiftView DataContext="{Binding UsedSpools}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem Label="Групповая этикетка" LabelPosition="Top" Width="400" Height="265" >
                            <Border BorderThickness="1" BorderBrush="#FF000000">
                                <Image Source="{Binding GroupPackageLabelImage, Mode=OneWay}"/>
                            </Border>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Транспортная этикетка" LabelPosition="Top" Width="400" Height="265" >
                            <Border BorderThickness="1" BorderBrush="#FF000000">
                                <Image Source="{Binding TransportPackageLabelImage, Mode=OneWay}"/>
                            </Border>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutControl>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Групповая этикетка" >
                <dxlc:LayoutControl Orientation="Vertical">
                    <dxlc:LayoutItem Label="Групповая этикетка" LabelPosition="Top" Width="700" Height="500" >
                        <Border BorderThickness="1" BorderBrush="#FF000000">
                            <Image Source="{Binding GroupPackageLabelImage, Mode=OneWay}"/>
                        </Border>
                    </dxlc:LayoutItem>
                </dxlc:LayoutControl>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Транспортная этикетка" >
                <dxlc:LayoutControl Orientation="Vertical">
                    <dxlc:LayoutItem Label="Транспортная этикетка" LabelPosition="Top" Width="700" Height="800" >
                        <Border BorderThickness="1" BorderBrush="#FF000000">
                            <Image Source="{Binding TransportPackageLabelImage, Mode=OneWay}"/>
                        </Border>
                    </dxlc:LayoutItem>
                </dxlc:LayoutControl>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Отобранные образцы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <dxb:BarManager>
                        <dxb:BarManager.Bars>
                            <dxb:Bar>
                                <dxb:BarButtonItem Content="Добавить" Glyph="{dx:DXImage Image=Add_32x32.png}" Command="{Binding AddSampleCommand}"/>
                                <dxb:BarButtonItem Content="Удалить" Glyph="{dx:DXImage Image=Cancel_16x16.png}" Command="{Binding DeleteSampleCommand}"
                                                   LargeGlyph="{dx:DXImage Image=Cancel_32x32.png}" GlyphSize="Small"/>
                            </dxb:Bar>
                        </dxb:BarManager.Bars>
                    </dxb:BarManager>
                    <dxlc:LayoutControl Grid.Row="1">
                        <dxlc:LayoutItem Label="Диапазон:">
                            <dxe:ComboBoxEdit ItemsSource="{Binding Intervals}" SelectedIndex="{Binding Intervalid}" x:Name="SamplesIntervalList" IsTextEditable="False"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutControl>
                    <dxg:GridControl EnableSmartColumnsGeneration="True" Grid.Row="2" ItemsSource="{Binding Samples}"
                                     SelectionMode="Row" SelectedItem="{Binding SelectedSample}">
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn FieldName="Date" Header="Дата" ReadOnly="True" VisibleIndex="1" Width="120" FixedWidth="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:DateEditSettings Mask="g" MaskUseAsDisplayFormat="True" />
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="NomenclatureName" ReadOnly="True" VisibleIndex="3"  Header="Номенклатура"/>
                            <dxg:GridColumn FieldName="ShiftID" Header="Смена" VisibleIndex="2" Width="13" />
                            <dxg:GridColumn FieldName="Quantity" ReadOnly="True" Header="Количество" VisibleIndex="4" Width="120" FixedWidth="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings Mask="f" MaskType="Numeric"/>
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                        </dxg:GridControl.Columns>
                        <dxg:GridControl.GroupSummary>
                            <dxg:GridSummaryItem FieldName="Quantity" SummaryType="Sum" DisplayFormat="Итого: {0:d}" />
                        </dxg:GridControl.GroupSummary>
                        <dxg:GridControl.TotalSummary>
                            <dxg:GridSummaryItem FieldName="Quantity" SummaryType="Sum" DisplayFormat="Итого: {0:d}" />
                        </dxg:GridControl.TotalSummary>
                        <dxg:GridControl.View>
                            <dxg:TableView AllowPerPixelScrolling="True" ShowTotalSummary="True" AutoWidth="True"/>
                        </dxg:GridControl.View>
                        <dxmvvm:Interaction.Behaviors>
                            <dxmvvm:EventToCommand EventName="MouseDoubleClick" Command="{Binding ShowSampleCommand}"/>
                        </dxmvvm:Interaction.Behaviors>
                    </dxg:GridControl>

                </Grid>
            </dx:DXTabItem>
        </dx:DXTabControl>
        <dxmvvm:Interaction.Behaviors>
            <dx:DialogService DialogWindowStartupLocation="CenterOwner">
                <dx:DialogService.ViewTemplate>
                    <DataTemplate>
                        <dialogs:SetQuantityDialog/>
                    </DataTemplate>
                </dx:DialogService.ViewTemplate>
                <dx:DialogService.DialogStyle>
                    <Style TargetType="dx:DXDialogWindow">
                        <Setter Property="Width" Value="300"/>
                        <Setter Property="Height" Value="160"/>
                    </Style>
                </dx:DialogService.DialogStyle>
            </dx:DialogService>
            <g:UIAuthBehavior />
        </dxmvvm:Interaction.Behaviors>
    </Grid>
</UserControl>
