<UserControl x:Class="Gamma.Dialogs.SetBaleWeightDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gamma.Dialogs"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dialogViewModels="clr-namespace:Gamma.DialogViewModels"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="600"
        d:DataContext="{d:DesignInstance Type=dialogViewModels:SetBaleWeightDialogModel, IsDesignTimeCreatable=False}">
    <dxlc:LayoutControl Orientation="Vertical">
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
        <dxlc:LayoutItem Width="100" Label="Вес, кг"> 
            <dxe:SpinEdit MinValue="0" EditValue="{Binding Weight, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        </dxlc:LayoutItem>
    </dxlc:LayoutControl>
</UserControl>
